@using HotelBooking.Domain.Entities;
@model IEnumerable<Villa>

    
<div class="w-100 card border-0 p-4">
        <div class="card-header border ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-dark py-2">
                        Villa List
                    </h2>
                </div>
            </div>
        </div>

    

    <div class="card-body border p-3">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Villa" asp-action="Create" class="btn btn-secondary"><i class="bi bi-house-add"></i> Add Villa</a>
            </div>
        </div>
    

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>Price</th>
                    <th>Sqft</th>
                    <th>Occupancy</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <input type="hidden" name="villaId" asp-for=@item.Id />
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Sqft</td>
                    <td>@item.Occupancy</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@item.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>